            android:id="@+id/textView6"
            android:layout_width="340dp"
            android:layout_height="130dp"
            android:text="En Rústica Mall del Sur, nos dedicamos a ofrecer una experiencia gastronómica única que combina lo mejor de la cocina peruana e internacional. Ubicados en el Nivel 4, Plaza Restaurantes del Centro Comercial Mall del Sur, nuestro restaurante es el lugar ideal para disfrutar de una amplia variedad de platos en un ambiente acogedor y familiar."
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.449" />

